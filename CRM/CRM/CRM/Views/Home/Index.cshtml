@using CRM.Models
@model CRM.Models.ProfileDataModel


@{
    ViewBag.Title = "Home Page";
}
<script>
    


</script>


<div class="row">
    <br/>
    <br/>
    <table style="width: 80%" border="2px" align="center">
        <tr>
            <th>@Html.LabelFor(a => a.FName)</th>
            <th>@Html.LabelFor(a => a.LName)</th>
            <th>@Html.LabelFor(a => a.PhoneNo)</th>
            <th>@Html.LabelFor(a => a.Email)</th>


        </tr>
        @{


            if (ViewBag.Profiles != null)
            {
                foreach (var vr in ViewBag.Profiles)
                {
                    <tr>
                        <td>@vr.FName</td>
                        <td>@vr.LName</td>
                        <td>@vr.PhoneNo</td>
                        <td>@vr.Email</td>
                        <td>@Html.ActionLink("Edit","Edit", new { UserId = @vr.UserId })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { UserId = @vr.UserId },
                                new { onclick= "ConfirmDelete()" })</td>
                    </tr>
                }
                @*<a href="../Home/Edit/@vr.UserId">Edit</a>*@
            }
            else
            {
                foreach (var vr in ViewBag.Profile)
                {
                    <tr>
                        <td>@vr.FName</td>
                        <td>@vr.LName</td>
                        <td>@vr.PhoneNo</td>
                        <td>@vr.Email</td>

                    </tr>
                }

            }
            <script>
                function ConfirmDelete() {
                    var x = confirm("Are you sure you want to delete?");
                    if (x)
                        return true;
                    else
                        return false;
                }
            </script>

        }

    </table>
</div>


    


