@model CRM.Models.ProfileDataModel

@{
    ViewBag.Title = "Newuser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Create a new User</title>
</head>
<body>
    @using (Html.BeginForm("Newuser", "Home", FormMethod.Post))
    {
        <div class="row">
            <br/>
            <br/>
            <table style="width: 50%" align="left">
                <tr>
                    <th>@Html.LabelFor(a => a.FName)</th>


                    <td>
                        @Html.TextBoxFor(a => a.FName)
                        @Html.ValidationMessageFor(a => a.FName)
                                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(a => a.LName)</th>

                    <td>
                        @Html.TextBoxFor(a => a.LName)
                         @Html.ValidationMessageFor(a => a.LName)
                                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(a => a.PhoneNo)</th>

                    <td>
                        @Html.TextBoxFor(a => a.PhoneNo)
                         @Html.ValidationMessageFor(a => a.PhoneNo)
                                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(a => a.Email)</th>

                    <td>
                        @Html.TextBoxFor(a => a.Email)
                       @Html.ValidationMessageFor(a => a.Email)
                        </td>
                </tr>


            </table>
        </div>
        <div>
            <br/>
            <button id="btnsave">Save</button>
            <script type="text/javascript">
                document.getElementById("btnsave").onclick = function() {
                    //logic to save in DB
                    location.href = "../Index";
                };
            </script>

            

           

        </div>
       
    }

@Html.ActionLink("save","Newuser","Home",new{Model},null)
